---
interface Props {
	title: string;
}

import '@fontsource-variable/onest';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Easily transform your package.json file into structured documentation in Markdown format. Upload your file or paste the content to get ready-to-use documentation with JSON2MD.">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Onest Variable', sans-serif;
		background: rgb(20, 21, 29);
	}
</style>
